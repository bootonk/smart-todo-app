<body>
  <nav class="nav-top">
    <div id="nav-logo">Smart To Do List</div>
    <div class="nav-login">
      <div id="nav-login"> Login </div>
    </div>
  </nav>

  <section class="main-container">
    <section class="header-form">
      <form id="form-input" action="">
        <p>How are you today?</p>
        <input id="inputText"type="text" name="todo" placeholder="Add your to-do">
        <button type="submit" class="addItemButton">Add</button>
      </form>
    </section>

    <section id="categories">
      <ul>
        <li><a href="tab-1">To Buy</a></li>
        <li><a href="tab-2">To Watch</a></li>
        <li><a href="tab-3">To Eat</a></li>
        <li><a href="tab-4">To Read</a></li>
        <li><a href="tab-5">All</a></li>
      </ul>
      <div class="tab-body" id="tab-1">
        <ul>
          <li>
            <input id="tab-1" type="checkbox">
            <label for="tab-1">Dalgona Coffee Challenge<span class="box"></span></label>
          </li>
        </ul>
      </div>
      <div class="tab-body" id="tab-2">
        <ul>
          <li>
            <input id="tab-2" type="checkbox">
            <label for="tab-2">Read a book<span class="box"></span></label>
          </li>
        </ul>
      </div>
      <div class="tab-body" id="tab-3">
        <ul>
          <li>
            <input id="tab-3" type="checkbox">
            <label for="tab-3">Spring cleaning<span class="box"></span></label>
          </li>
        </ul>
      </div>
      <div class="tab-body" id="tab-4">
        <ul>
          <li>
