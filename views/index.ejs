<body>
  <!-- Top nav bar (fixed) -->
  <nav class="nav-top">
    <div id="nav-logo">Smart To Do List</div>
    <div class="nav-login">
      <div id="nav-login"> Login </div>
    </div>
  </nav>

  <!-- Main paige content -->
  <main>
    <!-- Add new todo form -->
    <section class="new-todo-container">
      <form id="form-input" action="/api/lists/" method="post">
        <p></p>
        <input id="new-todo-input" type="text" name="todo_name" maxlength="300" placeholder="I want to ...">
        <button type="submit" class="addItemButton"><i class="fas fa-plus"></i> Add</button>
      </form>
    </section>

    <!-- Show category tabs and containers -->
    <section id="categories">
      <ul>
        <li><a href="#tab-1">Read <span class="count"></span></a></li>
        <li><a href="#tab-2">Watch <span class="count"></span></a></li>
        <li><a href="#tab-3">Shop <span class="count"></span></a></li>
        <li><a href="#tab-4">Eat <span class="count"></span></a></li>
      </ul>

      <div class="share">Share
        <button><i class=" text-message fa-solid fa-message"></i></button>
        <button><i class=" email fa-solid fa-envelope"></i></button>
      </div>

      <div class="form-check nav-pills" id="tab-1"></div>
      <div class="form-check nav-pills" id="tab-2"></div>
      <div class="form-check nav-pills" id="tab-3"></div>
      <div class="form-check nav-pills" id="tab-4"></div>

    </section>




      <section id="uncategorized">
        <a>We could not place these, add to the group of your choice</a>
        <div class="todo-uncategorized">
          <input class="form-check-input" type="checkbox" id="myCheckbox1">
          <label class="form-check-label text-dark" for="myCheckbox1">todo xxxx<span class="box"></span></label>
          <div class="uncategorized-buttons-container">
            <button type="submit" class="edit btn btn-warning btn-sm fa-sharp fa-solid fa-pen"></button>
            <button type="submit" class="delete btn btn-warning btn-sm fa-solid fa-circle-xmark"></button>
          </div>
        </div>
        <div class="todo-uncategorized">
          <input class="form-check-input" type="checkbox" id="myCheckbox1">
          <label class="form-check-label text-dark" for="myCheckbox1">todo xxxeeeeeex<span class="box"></span></label>
          <div class="uncategorized-buttons-container">
            <button type="submit" class="edit btn btn-warning btn-sm fa-sharp fa-solid fa-pen"></button>
            <button type="submit" class="delete btn btn-warning btn-sm fa-solid fa-trash"></button>
          </div>
        </div>
      </section>


  </main>

</body>

